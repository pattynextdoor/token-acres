{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./out",
    "rootDir": "./src",
    "sourceMap": true
  },
  "include": [
    "src/extension/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "dist",
    "src/webview"
  ]
}